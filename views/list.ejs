<%- include('header') %>

<div class="box" id="heading">
  <h1 style="color: blue">Today is : <%= listTitle %></h1>
</div>
<div class="box">
  <% for(let i = 0; i < newListItems.length; i++) { %>
  <div class="item">
    <input type="checkbox" />
    <p><%= newListItems[i]%></p>
  </div>
  <% } %>
  <form class="item" action="/" method="post">
    <input type="text" name="listName" placeholder="New Item" />
    <button type="submit" name="list" value="<%= listTitle%>">+</button>
  </form>
</div>

<%- include('footer') %>
